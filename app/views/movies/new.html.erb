<div class="container">
  <h1 class="mt-5 mb-4">Agregar pel√≠cula</h1>

  <%= form_with(model: @movie, url: movies_path, class: 'needs-validation', novalidate: true) do |form| %>
    <div class="form-group mb-4">
      <%= form.label :name, 'Nombre' %>
      <%= form.text_field :name, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        Nombre es requerido.
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.label :synopsis, 'Sinopsis' %>
      <%= form.text_area :synopsis, class: 'form-control', rows: 5, required: true %>
      <div class="invalid-feedback">
        Sinopsis es requerida.
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.label :director, 'Director' %>
      <%= form.text_field :director, class: 'form-control', required: true %>
      <div class="invalid-feedback">
        Director es requerido.
      </div>
    </div>

    <div class="form-group mb-4">
      <%= form.submit 'Guardar', class: 'btn btn-primary' %>
      <%= link_to 'Volver', movies_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
